   <select id="findServiceItemCount" parameterClass="java.util.Map" resultMap="serviceItemResult">
   	SELECT
   	C.id,
    C.NAME,
    C.CODE,
    C.MEMO,
    C.DEPTNAME
	FROM C_SERVICE_ITEM C,
	R_POSITION_ITEM PI
	WHERE C.ID = PI.itemId AND
		PI.positionId = #positionId#
		AND PI.itemId = (
		SELECT
			CI."ID"
		FROM
			C_SERVICE_ITEM CI
		WHERE
			CI.CODE = #serviceItemCode#
		)
   </select>
   
   
