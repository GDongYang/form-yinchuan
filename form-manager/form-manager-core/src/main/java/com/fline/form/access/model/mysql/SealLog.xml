   <select id="find" resultMap="sealLogResult">
	  <![CDATA[ SELECT
             s.id,
            s.deptId,
            s.sealId,
            s.itemName,
            s.certName,
            s.busiCode,
            s.createDate,
            s.cerNo,
            s.username,
                  (select name from c_department d where d.id = s.deptId ) as deptName,
	 			 (select name from c_seal sl where sl.id = s.sealId ) as sealName
	   ]]>
